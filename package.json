{
  "name": "vision",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "10.16.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gulp": "^4.0.2",
    "http-server": "^0.11.1",
    "karma": "^4.1.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "semver": "^6.1.2"
  },
  "scripts": {
    "local": "http-server src",
    "karma": "karma start",
    "node-version": "node ./build_scripts/node-version.js",
    "lint": "eslint --fix ./*.js ./build_scripts/*.js ./src/js/*.js ./tst/*.js",
    "test:node": "mocha ./tst/**/*.js",
    "test:browser": "karma run",
    "test": "npm run test:node && npm run test:browser",
    "build": "npm run node-version && npm run lint && npm run test && echo '\n\nBuild OK.'"
  }
